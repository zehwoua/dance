				            </div><!--/panel-->
				        </div><!--/change-avatar-table-->

				        <div id="change_profile_table" class="clearfix no_display">
				        	<%= render 'edit_profile_form' %>
				        </div><!--/change_profile_table-->

					</div><!--/col-lg-9-->
      			</div><!--/row-->

      		</div><!--/tabs1-->
      		<div id="address-tab" class="display_videos_module featured_style favorites clearfix">
      			<%= link_to 'Add New Address', new_user_address_path(@user), :class => 'btn btn-primary pull-right btn-sm' %>
      			<h2 class="section_title">My Adresses</h2>
      			<table class="table">
      				<tr>
      					<th>Address</th>
      					<th>City</th>
      					<th>Region</th>
      					<th>Country</th>
      					<th>Postal Code</th>
      					<th></th>
      				</tr>
      				<% @addresses.each do |address| %>
      					<tr>
      						<td><%= "#{address.street_address} #{address.extended_address}" %></td>
      						<td><%= address.locality %></td>
      						<td><%= address.region %></td>
      						<td><%= address.country_name %></td>
      						<td><%= address.postal_code %></td>
      						<td>
      							<%= link_to 'Destroy', user_address_path(@user, address), :method => :delete, :confirm =>'Are you sure?', :class => 'btn btn-sm btn-danger pull-right' %>
      							<%= link_to 'Edit', edit_user_address_path(@user, address), :class => 'btn btn-warning btn-sm pull-right' %>

      						</td>
      					</tr>
      				<% end %>
      			</table>
      		</div><!--/tabs2-->
      		<div id="credit-card-tab" class="display_videos_module featured_style favorites clearfix">
      			<%= link_to 'Add New Credit Card', new_user_credit_card_path(@user), :class => 'btn btn-primary pull-right btn-sm' %>
      			<h2 class="section_title">My Credit Crads</h2>
      			<table class="table">
      				<tr>
      					<th>Card Type</th>
      					<th>Credit Card Number</th>
      					<th>Card Holder Name</th>
      					<th>Expiration Date</th>
      					<th></th>
      				</tr>
      				<% if @credit_cards.count > 1 %>
      					<% @deletable = true %>
      				<% end %>

      				<% @credit_cards.each do |credit_card| %>
	      				<tr>
					        <td> <%= image_tag "credit_cards/#{credit_card.card_type}.png", :class => "card_image" %>
					        	<% if credit_card.default? %>
					        		<b>(default)</b>
					        	<% end %>
					        </td>
					        <td> <%= credit_card.masked_number %></td>
					        <td> <%= credit_card.cardholder_name %></td>
					        <td> <%= credit_card.expiration_date %></td>
					        <td>
					        	<% if @deletable == true %>
					          		<%= link_to 'Destroy', user_credit_card_path(@user, credit_card), :method => :delete, :confirm =>'Are you sure?', :class => 'btn btn-sm btn-danger pull-right' %>
					          	<% end %>
					          	<%= link_to 'Edit', edit_user_credit_card_path(@user, credit_card), :class => 'btn btn-warning btn-sm pull-right'%>
					          	<% if !credit_card.default? %>
				        			<%= link_to 'Make Default', user_credit_cards_make_default_path(@user, :id => credit_card), :method => :make_default, :class => 'btn btn-sm btn-success pull-right make-default'%>
				        		<% end %>
					          </td>
					    </tr>
				    <% end %>
				</table>
      		</div><!--/tabs3-->
      		<div id="subscription" class="display_videos_module featured_style favorites clearfix">
      			In this part user will be able to cancel their subscription..

      			maybe in the future update the subscription
      		</div><!--/tabs4-->
		</div><!--/my_profile-->
	</div>
</div>