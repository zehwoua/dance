<div id="user_registration_popup" class="gray_box">
	<div class="row">
		<div class="col-lg-12">
			<div class="page-header">
				<h1>Try <span class="text-primary">DanceDynamics </span>Free for 15-days</h1>
				<p>Sing up in 60 seconds. Upgrade or cancel your account anytime.</p>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-8">
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal'} ) do |f| %>
				<%= devise_error_messages! %>
				<div class="dancing_shadows">
					<img alt="Dancing_figures" src="/assets/dancing_figures.png">
				</div>

				<div class="form-group">
					<div class="col-lg-11">
						<%= f.text_field :username, :validate => {:uniqueness => true}, :autofocus => true, :class => "form-control", :placeholder => "Username" %>
					</div>
				</div>

				<div class="form-group">
					<div class="col-lg-11">
						<%= f.email_field :email, :class => "form-control", :placeholder => "Email address" %>
					</div>
				</div>

				<div class="form-group">
					<div class="col-lg-11">
						<%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
					</div>
				</div>

				<div class="form-group">
					<div class="col-lg-11">
						<%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password conformation" %>
						<div class="checkbox">
				          <label class="small_label">
				            <input type="checkbox"> I have read and aggred Terms and Conditions
				          </label>
				        </div>
					</div>
				</div>
				
				<div class="form-group">
					<div class="col-lg-7">
						<%= f.submit "Sign up", :class => "btn btn-primary btn-lg" %>
					</div>
				</div>
			<% end %>
			<%= render "devise/shared/links" %>
		</div>
		<div class="col-lg-4">
			<ul class="no_list register_benefits">
				<li><span class="glyphicon glyphicon-ok"></span>Access videos on DanceDynamics</li>
				<li><span class="glyphicon glyphicon-ok"></span>Pick your favorite videos and watch later</li>
				<li><span class="glyphicon glyphicon-ok"></span>Weekly DanceDynamic Newsletter</li>
				<li><span class="glyphicon glyphicon-ok"></span>Comment and post on blogs and videos</li>
			</ul>
		</div>
	</div>
</div><!--/user_registration_popup-->
