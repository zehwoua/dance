<p id="notice"><%= notice %></p>
<%= image_tag @video.photo.url(:medium) %>
<p>
  <b>Title:</b>
  <%= @video.title %>
</p>

<p>
  <b>Description:</b>
  <%= @video.description %>
</p>

<p>
  <b>Style:</b>
  <%= @video.style_id %>
</p>

<p>
  <b>Duration:</b>
  <%= @video.duration %>
</p>

<p>
  <b>Teacher:</b>
  <%= @video.teacher_id %>
</p>

<p>
  <b>Level:</b>
  <%= @video.level %>
</p>
<% if current_user %>
  <div class="favorite_button_container">
    <% if current_user.favorites.include? @video %>
      <%= render 'videos/unfavorite' %>
    <% else %>
      <%= render 'videos/favorite' %>
    <% end %>
  </div>
<% end %>

<%= link_to 'Edit', edit_video_path(@video) %> |
<%= link_to 'Back', videos_path %>


<h2>Comments</h2>

<div id="comments">
  <%= render @video.comments %>
</div>

<% if user_signed_in? %>
  <h3>New Comment</h3>
  <%= render 'comments/form' %>
  <% else %>
  <br/>
  <p>Please <%= link_to "Sign in" , new_user_session_path %> to leave a comment.</p>
  <p>You do not have an account yet? <%= link_to "Sign up", new_user_registration_path %> from here</p>
<% end %>
