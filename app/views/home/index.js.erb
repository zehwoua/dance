loading_videos = '<%= j render(@videos) %>';
$(loading_videos).filter('.video_container').each(function(){
	var video = $(this).addClass('added_video');
	$('#video_listing').append(video);
	setTimeout(function(){
	  video.animate({
		    opacity: 1,
		    top: "0"
		  }, 600, function() {
		    // Animation complete.
  	});
	  <% if @videos.next_page %>
	  $('.pagination').replaceWith('<%= j will_paginate(@videos) %>');
	<% else %>
	  $('.pagination').remove();
	<% end %>
	<% sleep 1 %>
	}, 500);
});