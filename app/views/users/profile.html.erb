<%= render 'dashboard_tabs', :active_tab => 'profile' %>
<div id="dashboard_section">
	<div class="inner_container">
		<div id="my_profile" class="dashboard_inner_tab">
			<ul class="class_tabs clearfix">
		        <li><a href="#tabs-1">Profile</a></li>
