<dl>
  <% if current_user.has_payment_info? -%>
      <dt>Name</dt>
      <dd><%= current_user.first_name %></dd>
      <dd><%= current_user.last_name %></dd>
      <dt>Email</dt>
      <dd><%= current_user.email %></dd>
      <dt>Credit Card</dt>
      <dd><%= current_user.credit_cards.first.masked_number%></dd>
      <%= link_to "Edit Your Payment Info", users_edit_payment_info_path(current_user.id) %>
  <% else -%>
  <dt><%= link_to "Setup Your Payment Info", users_new_payment_method_path  %></dt>
  <% end %>
    <dt>Last Logged In</dt>
    <dd><%= current_user.last_sign_in_at %></dd>
</dl>

