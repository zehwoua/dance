<%= form_for(@style, :html => { :class => 'form-horizontal'}) do |f| %>
      <% if @style.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@style.errors.count, "error") %> prohibited this style from being saved:</h2>

          <ul>
          <% @style.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :name, :class => "col-lg-2 control-label" %>
        <div class="col-lg-7">
          <%= f.text_field :name, :class => "form-control", :placeholder => "Style Name" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description, :class => "col-lg-2 control-label" %>
        <div class="col-lg-7">
          <%= f.text_area :description, :class => "form-control", :placeholder => "Please write style description", :rows => 10 %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-offset-2 col-lg-7">
          <%= link_to "Go back", admin_styles_path, :class => "btn btn-default"%>
          <%= f.submit :class => "btn btn-primary" %>
        </div>
      </div>
<% end%>